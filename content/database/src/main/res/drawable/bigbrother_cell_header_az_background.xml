<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bb_background_secondary" />
        </shape>
    </item>
    <item
        android:width="1dp"
        android:gravity="start">
        <shape android:shape="rectangle">
            <solid android:color="@color/bb_background" />
        </shape>
    </item>
    <item
        android:height="1dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/bb_background" />
        </shape>
    </item>
    <item
        android:height="1dp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <solid android:color="@color/bb_background" />
        </shape>
    </item>
    <item
        android:width="16dp"
        android:height="16dp"
        android:drawable="@drawable/bigbrother_ic_arrow_drop_up"
        android:gravity="end|center_vertical"
        android:right="4dp" />
</layer-list>