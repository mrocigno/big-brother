        <layer-list>
            <item android:drawable="@drawable/bigbrother_ic_database" android:width="24dp" android:gravity="start"/>
            <item android:drawable="@drawable/bigbrother_ic_file" android:width="24dp" android:gravity="end"/>
        </layer-list>
    </item>
