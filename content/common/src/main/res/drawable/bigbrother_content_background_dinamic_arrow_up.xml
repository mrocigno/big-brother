<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/arrow_stroke"
        android:height="20dp"
        android:width="20dp"
        android:top="4dp"
        android:gravity="start">

        <rotate
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="40"
            android:fromDegrees="45">

            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="@android:color/black"/>
            </shape>
        </rotate>
    </item>

    <item
        android:id="@+id/content"
        android:top="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/bb_background_secondary"/>
            <stroke android:width="1dp" android:color="@android:color/black"/>
        </shape>
    </item>

    <item
        android:id="@+id/arrow"
        android:width="19dp"
        android:height="19dp"
        android:top="5dp"
        android:gravity="start">

        <rotate android:pivotY="50%"
            android:pivotX="50%"
            android:toDegrees="40"
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/bb_background_secondary"/>
            </shape>
        </rotate>
    </item>
</layer-list>