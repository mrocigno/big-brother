<?xml version="1.0" encoding="utf-8"?>
<resources>
    <public />
    <style name="Theme.BigBrother" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bb_brand_default</item>
        <item name="colorPrimaryVariant">@color/bb_brand_secondary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bb_co_brand_default</item>
        <item name="colorSecondaryVariant">@color/bb_co_brand_secondary</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="android:colorAccent">@color/bb_moss_green</item>

        <item name="android:windowBackground">@color/bb_background</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">@bool/bigbrother_is_light</item>

        <item name="fontFamily">@font/lato</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>

        <item name="alertDialogTheme">@style/AlertBigBrother</item>
    </style>

    <style name="BigBrotherButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/bb_text_title</item>
        <item name="android:textColor">@color/bb_text_title_inverse</item>
    </style>

    <style name="BigBrotherButtonSmall" parent="Widget.AppCompat.Button.Small">
        <item name="android:backgroundTint">@color/bb_text_title</item>
        <item name="android:textColor">@color/bb_text_title_inverse</item>
    </style>

    <style name="SearchView" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">#33000000</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/bigbrother_ic_search</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">?colorPrimary</item>
    </style>

    <style name="input_outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#33000000</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">?colorPrimary</item>
    </style>

    <style name="spinner_outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">#33000000</item>
        <item name="materialThemeOverlay">@style/Theme.MyApp.Spinner.ThemeOverlay</item>
    </style>

    <style name="Theme.MyApp.Spinner.ThemeOverlay" parent="">
        <item name="autoCompleteTextViewStyle">@style/Widget.MyApp.Spinner.ThemeOverlay.AutoCompleteTextView</item>
        <item name="colorSurface">@color/bb_background_secondary</item>
    </style>

    <style name="Widget.MyApp.Spinner.ThemeOverlay.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@null</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/bb_text_title</item>
        <item name="android:textSize">@dimen/bb_text_m</item>
    </style>

    <style name="TextAppearance_Tab">
        <item name="android:fontFamily">@font/courier_bold</item>
        <item name="android:textColor">@color/bb_text_title</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AlertBigBrother" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bigbrother_alert_background</item>
        <item name="colorPrimary">@color/bb_brand_default</item>
        <item name="colorPrimaryVariant">@color/bb_brand_secondary</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>
</resources>