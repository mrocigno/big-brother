<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/log_entry_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/boy_red"
        android:gravity="center"
        android:textColor="@color/text_title"
        android:textSize="12sp"
        app:fontFamily="@font/courier_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="W" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/log_entry_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ellipsize="end"
        android:textSize="11sp"
        android:paddingVertical="3dp"
        android:textColor="@color/text_paragraph"
        app:fontFamily="@font/courier_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/log_entry_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem[3]" />

</androidx.constraintlayout.widget.ConstraintLayout>