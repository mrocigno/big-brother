<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/log_entry_icon"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@color/boy_red"
        android:gravity="center"
        android:textColor="@color/text_title"
        android:textSize="15sp"
        app:fontFamily="@font/courier_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_min="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="W" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/log_entry_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ellipsize="end"
        android:marqueeRepeatLimit="23"
        android:maxLines="4"
        android:paddingVertical="5dp"
        android:textColor="@color/text_paragraph"
        app:fontFamily="@font/courier_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/log_entry_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Test" />

</androidx.constraintlayout.widget.ConstraintLayout>